{
  "template_id": "nextjs_workflow_app",
  "name": "Next.js Workflow App",
  "type": "web_app",
  "version": "1.0.0",
  "description": "A workflow and wizard application template with stepper flows, approvals, status timelines, comments, and activity audit trails",
  "stack": [
    "nextjs",
    "typescript",
    "tailwind",
    "shadcn-ui",
    "framer-motion",
    "lucide-react"
  ],
  "recommended_commands": {
    "install": "npm install",
    "dev": "npm run dev",
    "build": "npm run build",
    "start": "npm run start",
    "lint": "npm run lint"
  },
  "outputs": ["url"],
  "branding": {
    "tokensPath": "src/brand/tokens.css",
    "configPath": "src/brand/brand.config.ts",
    "logoDir": "public/brand"
  },
  "localization": {
    "defaultLocale": "pt",
    "supportedLocales": ["pt", "en"],
    "translationsPath": "src/i18n"
  },
  "exposed_routes": [
    {
      "route": "/",
      "name": "Dashboard",
      "description": "Workflow overview with pending approvals and active tasks"
    },
    {
      "route": "/workflows",
      "name": "Workflows",
      "description": "List of all workflows with status and progress"
    },
    {
      "route": "/workflows/new",
      "name": "New Workflow",
      "description": "Wizard stepper to create new workflow"
    },
    {
      "route": "/approvals",
      "name": "Approvals",
      "description": "Pending approvals and decision queue"
    },
    {
      "route": "/settings",
      "name": "Settings",
      "description": "Workflow configuration"
    },
    {
      "route": "/playground",
      "name": "Playground",
      "description": "Component showcase"
    }
  ],
  "features": {
    "responsive": true,
    "darkMode": true,
    "commandPalette": true,
    "collapsibleSidebar": true,
    "toasts": true,
    "mockData": true,
    "localization": true,
    "stepperFlow": true,
    "approvals": true,
    "statusTimeline": true,
    "comments": true,
    "activityAudit": true
  },
  "directories": {
    "components": "src/components",
    "pages": "src/app",
    "hooks": "src/hooks",
    "utilities": "src/lib",
    "brand": "src/brand",
    "i18n": "src/i18n",
    "publicAssets": "public"
  },
  "notes": "Workflow-focused template with wizard steppers, approval flows, and comprehensive activity tracking. Ideal for approval systems, onboarding flows, and multi-step processes."
}
