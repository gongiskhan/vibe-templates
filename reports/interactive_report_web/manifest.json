{
  "$schema": "../../templates.schema.json",
  "id": "interactive_report_web",
  "name": "Interactive Web Report",
  "version": "1.0.0",
  "category": "report",
  "description": "Web-based interactive report with filters, charts, drill-down, and export",
  "author": "Vibe Templates",
  "features": [
    "Interactive charts with Chart.js",
    "Date range and multi-select filters",
    "Data drill-down with modal detail view",
    "PDF and CSV export",
    "Responsive design",
    "Print-friendly styles",
    "Multi-locale support (PT/EN)",
    "CSS variable theming"
  ],
  "branding": {
    "tokens": "./src/styles/tokens.css",
    "assets": "./src/assets/"
  },
  "i18n": {
    "default": "pt",
    "supported": ["pt", "en"],
    "files": "./src/i18n/"
  },
  "scripts": {
    "dev": "npm run dev"
  }
}
