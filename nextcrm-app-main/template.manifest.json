{
  "template_id": "nextcrm-app",
  "name": "NextCRM App",
  "version": "0.0.3-beta",
  "description": "A full-featured CRM application with AI integration, email management, file uploads, internationalization, and comprehensive customer management",
  "stack": ["nextjs", "typescript", "tailwind", "prisma", "nextauth", "openai", "tremor", "react-hook-form", "zustand"],
  "recommended_commands": {
    "install": "npm install",
    "dev": "npm run dev",
    "build": "npm run build",
    "start": "npm run start",
    "lint": "npm run lint"
  },
  "features": {
    "authentication": true,
    "database": true,
    "aiIntegration": true,
    "emailManagement": true,
    "fileUpload": true,
    "i18n": true,
    "charts": true,
    "dragAndDrop": true,
    "darkMode": true
  },
  "branding": {
    "description": "Customize through Tailwind and Tremor component theming"
  }
}
